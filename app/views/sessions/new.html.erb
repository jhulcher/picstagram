<center>
  <div class="login">
    <h1>Picstagram</h1>
    <h2>Sign In</h2>
    <form action="<%= sessions_url %>" method="post">
      <%= auth_token_input %>
      <label>
        <input type="text"
                name="user[username]"
                placeholder='Username'
                value="">
      </label>
      <br></br>
      <label>
        <input type="password"
               name="user[password]"
               placeholder='Password'
               value="">
      </label>
      <br></br>
      <input type="submit" value="Sign In">
    </form>
  </div>
</center>
